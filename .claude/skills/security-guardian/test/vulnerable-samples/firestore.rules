// TEST FILE: Insecure Firestore Rules
//
// This file contains INTENTIONALLY INSECURE rules for testing.
// Expected detections:
// - FB-CFG-001: Open read rules
// - FB-CFG-002: Open write rules
// - FB-CFG-003: No authentication required

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // FB-CFG-001 & FB-CFG-002: CRITICAL - Open access to everything!
    match /{document=**} {
      allow read, write: if true;
    }

    // FB-CFG-001: Open read on sensitive collection
    match /users/{userId} {
      allow read: if true;  // Anyone can read all user data!
      allow write: if request.auth != null;
    }

    // FB-CFG-002: Open write on sensitive collection
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if true;  // Anyone can create/modify orders!
    }

    // FB-CFG-003: No auth check at all
    match /public/{docId} {
      allow read, write;  // Completely open
    }

    // FB-CFG-007: Missing validation
    match /posts/{postId} {
      allow write: if request.auth != null;
      // No validation of data structure or content!
    }

    // ============================================
    // SECURE EXAMPLES (for comparison)
    // ============================================

    // Proper owner-based access
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Proper validation
    match /comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.keys().hasAll(['text', 'authorId', 'createdAt'])
                    && request.resource.data.text is string
                    && request.resource.data.text.size() <= 1000;
    }
  }
}
